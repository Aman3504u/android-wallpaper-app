<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base style for all text -->
    <style name="TextAppearance.Base">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Body text styles -->
    <style name="TextAppearance.Body" parent="TextAppearance.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.Base">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Heading styles -->
    <style name="TextAppearance.Headline1" parent="TextAppearance.Base">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Headline3" parent="TextAppearance.Base">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Title styles -->
    <style name="TextAppearance.Title1" parent="TextAppearance.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Title2" parent="TextAppearance.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Title3" parent="TextAppearance.Base">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button text styles -->
    <style name="TextAppearance.Button" parent="TextAppearance.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Overline style -->
    <style name="TextAppearance.Overline" parent="TextAppearance.Base">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- List item styles -->
    <style name="ListItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Title1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Settings specific styles -->
    <style name="SettingsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginTop">@dimen/spacing_lg</item>
        <item name="android:layout_marginBottom">@dimen/spacing_md</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Title1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="SettingsItemSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginTop">@dimen/spacing_xs</item>
    </style>

    <!-- Input field styles -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_md</item>
        <item name="android:layout_marginBottom">@dimen/spacing_md</item>
        <item name="boxStrokeColor">@color/input_focus</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_field_corner_radius</item>
    </style>

    <style name="InputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Button styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:layout_marginTop">@dimen/spacing_md</item>
        <item name="android:layout_marginBottom">@dimen/spacing_sm</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:layout_marginTop">@dimen/spacing_sm</item>
        <item name="android:layout_marginBottom">@dimen/spacing_sm</item>
    </style>

    <style name="Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">@dimen/spacing_sm</item>
        <item name="android:layout_marginBottom">@dimen/spacing_sm</item>
    </style>

    <!-- Card styles -->
    <style name="Card.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="Card.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Switch styles -->
    <style name="Switch.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <!-- Divider style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginVertical">@dimen/spacing_md</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- Progress bar style -->
    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_md</item>
        <item name="android:layout_marginBottom">@dimen/spacing_md</item>
        <item name="android:indeterminateTint">@color/loading_indicator</item>
        <item name="android:progressTint">@color/loading_indicator</item>
        <item name="android:max">100</item>
    </style>

    <style name="ProgressBar.Circular" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/loading_indicator</item>
    </style>

    <!-- Loading overlay style -->
    <style name="LoadingOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/semi_transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Error text style -->
    <style name="ErrorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Caption</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:layout_marginTop">@dimen/spacing_xs</item>
        <item name="android:layout_marginStart">@dimen/spacing_md</item>
        <item name="android:layout_marginEnd">@dimen/spacing_md</item>
    </style>

    <!-- Helper text style -->
    <style name="HelperText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Caption</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginTop">@dimen/spacing_xs</item>
        <item name="android:layout_marginStart">@dimen/spacing_md</item>
        <item name="android:layout_marginEnd">@dimen/spacing_md</item>
    </style>

    <!-- Basic styles for layout references -->
    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_md</item>
        <item name="android:padding">@dimen/spacing_md</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Wallpaper">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Material3.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
