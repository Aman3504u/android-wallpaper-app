<?xml version="1.0" encoding="utf-8"?>
<!--
  AndroidManifest.xml for 3D Live Wallpaper
  Configured for Android 15 (API 35) with all required permissions and services
  
  Key Features:
  - WallpaperService with BIND_WALLPAPER permission
  - Settings and Preview Activities
  - Network security configuration
  - Hardware capability requirements
-->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wallpaper">

    <!--
      Required permissions for Live Wallpaper functionality
      
      INTERNET: Required for loading web content and remote assets
      ACCESS_NETWORK_STATE: Monitor network state for asset loading
      WAKE_LOCK: Keep device awake during wallpaper rendering (optional)
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--
      Wallpaper-specific permissions and features
      
      BIND_WALLPAPER: System permission that the wallpaper service requires
      This ensures only the Android system can bind to this service
    -->
    <uses-permission android:name="android.permission.BIND_WALLPAPER" />

    <!--
      Hardware and software requirements
      
      live_wallpaper: Ensures app appears only on devices supporting live wallpapers
      touchscreen: Required for gesture interaction with the wallpaper
      portrait | landscape: Support both orientations for flexible viewing
    -->
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch"
        android:required="false" />

    <!--
      Supported orientations - wallpapers work best in both orientations
      The actual wallpaper will adapt to screen size and orientation
    -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

    <application
        android:name=".WallpaperApplication"
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wallpaper"
        android:usesCleartextTraffic="false"
        tools:targetApi="35">

        <!--
          Main WallpaperService - The core service that renders the wallpaper
          
          Key attributes:
          - name: Full qualified service class
          - permission: BIND_WALLPAPER (required for wallpapers)
          - exported: false (security - not accessible from other apps)
          
          Intent filter matches WallpaperService action for system discovery
        -->
        <service
            android:name=".service.LiveWallpaperService"
            android:label="@string/wallpaper_service_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:exported="false">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <!--
              Wallpaper metadata - Links to configuration XML and settings activity
              
              The metadata file (livewallpaper.xml) contains:
              - Wallpaper name and description
              - Thumbnail resource for picker
              - Settings activity reference
            -->
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/livewallpaper" />
        </service>

        <!--
          Settings Activity - User configuration interface
          
          Purpose:
          - URL input for custom web content
          - Quality preset selection
          - Touch interaction toggle
          - Launch system wallpaper picker
          
          Launch modes optimized for proper back navigation
        -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:parentActivityName=".settings.PreviewActivity"
            android:theme="@style/Theme.Wallpaper.NoActionBar"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.PARENT_ACTIVITY"
                android:value=".settings.PreviewActivity" />
        </activity>

        <!--
          Preview Activity - Shows wallpaper preview before activation
          
          Used by the system wallpaper picker to preview the wallpaper
          Runs in a separate task to avoid interfering with home screen
        -->
        <activity
            android:name=".settings.PreviewActivity"
            android:exported="false"
            android:label="@string/preview_title"
            android:theme="@style/Theme.Wallpaper.Fullscreen"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:taskAffinity="com.example.wallpaper.preview" />

        <!--
          Launcher Activity - Entry point for testing/debugging
          
          Optional: For development/testing, this activity can be used
          to manually configure and launch the wallpaper preview
        -->
        <activity
            android:name=".settings.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wallpaper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



    </application>

</manifest>
