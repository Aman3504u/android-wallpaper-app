<?xml version="1.0" encoding="utf-8"?>
<!--
  Data Extraction Rules for Android 15
  Defines what data should be backed up and restored
  
  For privacy and security, we exclude sensitive data from backup
  and focus on user preferences only
-->

<data-extraction-rules>
    <cloud-backup>
        <!-- User preferences and settings -->
        <include domain="sharedpref" path="wallpaper_prefs.xml"/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="database" path="temp_cache.db"/>
        <exclude domain="file" path="webview_cache/"/>
        <exclude domain="file" path="crash_reports/"/>
    </cloud-backup>

    <device-transfer>
        <!-- User preferences transfer during device setup -->
        <include domain="sharedpref" path="wallpaper_prefs.xml"/>
        
        <!-- Exclude large or temporary files -->
        <exclude domain="file" path="webview_cache/"/>
        <exclude domain="database" path="temp_*"/>
    </device-transfer>
</data-extraction-rules>
