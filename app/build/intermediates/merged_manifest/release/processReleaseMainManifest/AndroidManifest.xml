<?xml version="1.0" encoding="utf-8"?>
<!--
  AndroidManifest.xml for 3D Live Wallpaper
  Configured for Android 15 (API 35) with all required permissions and services
  
  Key Features:
  - WallpaperService with BIND_WALLPAPER permission
  - Settings and Preview Activities
  - Network security configuration
  - Hardware capability requirements
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wallpaper"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="35" />

    <!--
      Required permissions for Live Wallpaper functionality
      
      INTERNET: Required for loading web content and remote assets
      ACCESS_NETWORK_STATE: Monitor network state for asset loading
      WAKE_LOCK: Keep device awake during wallpaper rendering (optional)
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--
      Wallpaper-specific permissions and features
      
      BIND_WALLPAPER: System permission that the wallpaper service requires
      This ensures only the Android system can bind to this service
    -->
    <uses-permission android:name="android.permission.BIND_WALLPAPER" />

    <!--
      Hardware and software requirements
      
      live_wallpaper: Ensures app appears only on devices supporting live wallpapers
      touchscreen: Required for gesture interaction with the wallpaper
      portrait | landscape: Support both orientations for flexible viewing
    -->
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch"
        android:required="false" />

    <!--
      Supported orientations - wallpapers work best in both orientations
      The actual wallpaper will adapt to screen size and orientation
    -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <permission
        android:name="com.example.wallpaper.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.wallpaper.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="com.example.wallpaper.WallpaperApplication"
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wallpaper"
        android:usesCleartextTraffic="false" >

        <!--
          Main WallpaperService - The core service that renders the wallpaper
          
          Key attributes:
          - name: Full qualified service class
          - permission: BIND_WALLPAPER (required for wallpapers)
          - exported: false (security - not accessible from other apps)
          
          Intent filter matches WallpaperService action for system discovery
        -->
        <service
            android:name="com.example.wallpaper.service.LiveWallpaperService"
            android:exported="false"
            android:label="@string/wallpaper_service_name"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <!--
              Wallpaper metadata - Links to configuration XML and settings activity
              
              The metadata file (livewallpaper.xml) contains:
              - Wallpaper name and description
              - Thumbnail resource for picker
              - Settings activity reference
            -->
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/livewallpaper" />
        </service>

        <!--
          Settings Activity - User configuration interface
          
          Purpose:
          - URL input for custom web content
          - Quality preset selection
          - Touch interaction toggle
          - Launch system wallpaper picker
          
          Launch modes optimized for proper back navigation
        -->
        <activity
            android:name="com.example.wallpaper.ui.SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.wallpaper.settings.PreviewActivity"
            android:theme="@style/Theme.Wallpaper.NoActionBar"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.app.PARENT_ACTIVITY"
                android:value=".settings.PreviewActivity" />
        </activity>

        <!--
          Preview Activity - Shows wallpaper preview before activation
          
          Used by the system wallpaper picker to preview the wallpaper
          Runs in a separate task to avoid interfering with home screen
        -->
        <activity
            android:name="com.example.wallpaper.settings.PreviewActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:label="@string/preview_title"
            android:launchMode="singleTop"
            android:taskAffinity="com.example.wallpaper.preview"
            android:theme="@style/Theme.Wallpaper.Fullscreen" />

        <!--
          Launcher Activity - Entry point for testing/debugging
          
          Optional: For development/testing, this activity can be used
          to manually configure and launch the wallpaper preview
        -->
        <activity
            android:name="com.example.wallpaper.settings.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wallpaper.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          WallpaperChangeReceiver - Handles wallpaper selection broadcasts
          
          Optional: Receives broadcasts when wallpaper is applied/removed
          for analytics or cleanup purposes
        -->
        <receiver
            android:name="com.example.wallpaper.prefs.WallpaperChangeReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter android:priority="1000" >
                <action android:name="android.app.action.LIVE_WALLPAPER_CHANGED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.wallpaper.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>